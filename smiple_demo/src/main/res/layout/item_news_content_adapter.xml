<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@drawable/news_content_adapter_backgroud">

        <TextView
            android:id="@+id/tv_item_news_content_adapter_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="title"
            android:textSize="18sp"
            android:textColor="@color/news_text_color" />

        <com.android.volley.ui.NetworkImageView
            android:id="@+id/niv_item_news_content_adapter_icon"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY" />
    </RelativeLayout>
</RelativeLayout>